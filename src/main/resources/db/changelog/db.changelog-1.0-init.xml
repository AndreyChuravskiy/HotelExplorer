<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="propertyview">
        <createTable tableName="address">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="house_number" type="INT"/>
            <column name="street" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(100)"/>
            <column name="country" type="VARCHAR(100)"/>
            <column name="post_code" type="VARCHAR(20)"/>
        </createTable>

        <createTable tableName="contacts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="phone" type="VARCHAR(50)"/>
            <column name="email" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="arrival_time">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="check_in" type="VARCHAR(10)"/>
            <column name="check_out" type="VARCHAR(10)"/>
        </createTable>

        <createTable tableName="hotel">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)" >
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="brand" type="VARCHAR(100)"/>
            <column name="address_id" type="BIGINT"/>
            <column name="contacts_id" type="BIGINT"/>
            <column name="arrival_time_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="hotel" baseColumnNames="address_id"
                                 referencedTableName="address" referencedColumnNames="id" constraintName="fk_hotel_address"/>
        <addForeignKeyConstraint baseTableName="hotel" baseColumnNames="contacts_id"
                                 referencedTableName="contacts" referencedColumnNames="id" constraintName="fk_hotel_contacts"/>
        <addForeignKeyConstraint baseTableName="hotel" baseColumnNames="arrival_time_id"
                                 referencedTableName="arrival_time" referencedColumnNames="id" constraintName="fk_hotel_arrival_time"/>

        <createTable tableName="amenity">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="hotel_amenity">
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="amenity_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="hotel_amenity" baseColumnNames="hotel_id"
                                 referencedTableName="hotel" referencedColumnNames="id" constraintName="fk_hotel_amenity_hotel"/>
        <addForeignKeyConstraint baseTableName="hotel_amenity" baseColumnNames="amenity_id"
                                 referencedTableName="amenity" referencedColumnNames="id" constraintName="fk_hotel_amenity_amenity"/>
        <addPrimaryKey tableName="hotel_amenity" columnNames="hotel_id, amenity_id" constraintName="pk_hotel_amenity"/>
    </changeSet>
</databaseChangeLog>